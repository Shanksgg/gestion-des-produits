@{
    ViewData["Title"] = "Create Category";
}
@model Artisanal.Web.Models.CategoryDto

<form asp-action="CategoryCreate">
    <div class="container">
        <div class="col mt-5">
            <h3>Create Category</h3>
            <p class="text-muted">Lorem Ipsum is simply dummy text</p>
            <hr />
        </div>
        <div class="row">
            <div as-asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* Category Name *@
            <div class="row">
                <div class="col-2">
                <label asp-for="CategoryName" class="control-label pt-2 fw-semibold">
                    Name
                </label>
                </div>
                <div class="col-5 pb-3">
                    <input asp-for="CategoryName" class="form-control ef-input" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
            </div>

            @* Foot *@
            <div class="row mt-4">
                <div class="col-auto">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <div class="col">
                    <a asp-action="CategoryIndex" class="btn btn-link text-decoration-none">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}