@{
    ViewData["Title"] = "Create Product";
}
@model Artisanal.Web.Models.ProductCategoryViewModel
<form asp-action="ProductCreate">
    <div class="container">
        <div class="col mt-5">
            <h3>Create Product</h3>
            <p class="text-muted">Lorem Ipsum is simply dummy text  </p>
            <hr />
        </div>
        <div class="row">
            <div as-asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* Product Name *@
            <div class="row">
                <div class="col-2">
                    <label asp-for="Product.ProductName" class="control-label pt-2 fw-semibold">
                    Name
                </label>
                </div>
                <div class="col-5 pb-3">
                    <input asp-for="Product.ProductName" class="form-control ef-input" required />
                    <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                </div>
            </div>

            @* Category Name *@
            <div class="row">
                <div class="col-2">
                    <label asp-for="Category.CategoryName" class="control-label pt-2 fw-semibold">
                        Category
                    </label>
                </div>
                <div class="col-5 pb-3">
                    <select asp-for="selectedCountry" class="form-select" aria-label="Countries select" asp-items="Model.CategoriesSelectList">
                    </select>
                    <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
                </div>
            </div>

            @* Price *@
            <div class="row">
                <div class="col-2">
                    <label asp-for="Product.Price" class="control-label pt-2 fw-semibold">

                </label>
                </div>
                <div class="col-5 pb-3">
                    <input asp-for="Product.Price" class="form-control ef-input" required />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
            </div>

            @* ImageURL *@
            <div class="row">
                <div class="col-2">
                    <label asp-for="Product.ImageURL" class="control-label pt-2 fw-semibold">
                    Image URL
                </label>
                </div>
                <div class="col-5 pb-3">
                    <input asp-for="Product.ImageURL" class="form-control ef-input" required />
                    <span asp-validation-for="Product.ImageURL" class="text-danger"></span>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-auto">
                    <input type="submit" value="Create" class="btn btn-primary " />
                    
                </div>
                <div class="col">
                    <a asp-action="ProductIndex" class="btn btn-link text-decoration-none">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}