@{
    ViewData["Title"] = "Products";
}

@model IEnumerable<Artisanal.Web.Models.ProductDto>
<div class="container">
    <div class="col mt-5">
        <h3>Products</h3>
        <p class="text-muted">Lorem Ipsum is simply dummy text</p>
        <hr />
    </div>
    <div class="row mb-4">
        <div class="col-md-3">
            <form asp-controller="Product" asp-action="ProductIndex">
                <div class="input-group">
                    <input type="text" class="form-control" 
                        placeholder="Search by product name" a
                        aria-label="" 
                        name="searchName"
                        aria-describedby="search-btn">
                    <button class="btn btn-secondary" type="submit" id="search-btn">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
        <div class="col-md-9">
            <a asp-action="ProductCreate" class="btn btn-primary">
                <i class="fas fa-plus mx-2"></i>Create Product
            </a>
        </div>
    </div>
    
    @if (Model == null)
    {
        <table class="table ef-table">   
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
        <span class="text-muted">List is empty</span>
    }      
    else
    {
        <table class="table ef-table">   
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.Category.CategoryName</td>
                        <td>@item.Price MAD</td>
                        <td>
                            <div class="d-flex justify-content-around">
                                <a asp-action="ProductEdit"
                                asp-route-productId="@item.ProductId">
                                <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="ProductDelete"
                                    asp-route-productId="@item.ProductId">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    
</div>